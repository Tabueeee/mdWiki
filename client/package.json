    "@types/highlight.js": "^9.12.3",
    "clean-css": "^4.2.1",
    "fs-extra": "^8.1.0",
    "html-minifier": "^4.0.0",
    "node-sass": "^4.12.0",
    "node-sass-glob-importer": "^5.3.2",
